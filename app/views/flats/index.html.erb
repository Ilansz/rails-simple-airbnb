<div class="container mt-3">

  <h1>All our flats</h1>




  <div class="d-flex justify-content-around">
    <% @flats.each do |flat| %>
      <div class="card" style="width: 18rem; margin:15px;">
        <img src="https://source.unsplash.com/random" alt="img" class="card-img-top" style="height: 200px;">
        <div style="margin: 10px;">
          <h4><%= flat.name %></h4>
          <p><%= flat.address %></p>
          <div class="d-flex">
            <p> <strong>  <%= flat.price_per_night %> â‚¬ </strong></p>
            <p style="margin-left: 15px;"> ðŸ‘¥ <strong> <%= flat.number_of_guests %></strong></p>
          </div>
        </div>
        <div class="d-flex" style="margin-left:5px">
        <p> <%= link_to 'Show', flat, class: "text-primary"%></p>
        <p style="margin-left: 15px;"><%= link_to 'Edit', edit_flat_path(flat), class: "text-warning" %></p>
        <p style="margin-left: 15px;"><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>


